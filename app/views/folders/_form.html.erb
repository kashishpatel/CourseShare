      <ul>
      <% @folder.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="panel panel-default devise-bs">
  <div class="panel-heading">
      <% if @folder.new_record? %> 
          <h4>New Folder</h4>
      <% else %> 
          <h4>Edit Folder</h4>
      <% end %> 
  </div>
  <div class="panel-body">
      <div class = "newForm">
         <%= form_for @folder, html: { multipart: true} do |f| %>
            <%= f.label :name %>
            <%= f.text_field :name %><br/><br/>
            <%= f.label :course %>
            <%= f.text_field :course %><br/><br/>
            <%= f.hidden_field :parent_id %> 
            <% if @folder.new_record? %> 
               <%= f.submit "Create Folder", class: "btn btn-primary" %> 
            <% else %> 
               <%= f.submit "Edit Folder", class: "btn btn-primary" %> 
            <% end %> 
         <% end %>
      </div>
   </div>   
</div>
<% end %>
